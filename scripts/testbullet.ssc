import edu.berkeley.bid.Bullet
import edu.berkeley.bid.bullet._

val sim = new Bullet;

sim.connect(Bullet.eCONNECT_GUI);

//sim.connect(Bullet.eCONNECT_DIRECT);

sim.configureDebugVisualizer(Bullet.COV_ENABLE_GUI, 0);

sim.setTimeOut(10);

sim.setTimeStep(1f/240);

val v = new Vector3(0.1f,0.2f,0.3f);

val q = sim.getQuaternionFromEuler(v);

val rpy = sim.getEulerFromQuaternion(q);

val gravity = new Vector3(0,0,-9.8f); 

sim.setGravity(gravity);

sim.loadURDF("/code/bullet3/data/plane.urdf")